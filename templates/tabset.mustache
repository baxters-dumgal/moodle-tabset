<div class="tabset-activity">
    <ul class="nav nav-tabs" role="tablist">
        {{#tabs}}
            <li class="nav-item" role="presentation">
                <a class="nav-link {{#active}}active{{/active}} {{colorclass}}"
                   id="tab-{{uniq}}-{{index}}"
                   data-toggle="tab"
                   href="#tab-content-{{uniq}}-{{index}}"
                   role="tab"
                   aria-controls="tab-content-{{uniq}}-{{index}}"
                   aria-selected="{{#active}}true{{/active}}{{^active}}false{{/active}}">
                    {{{title}}}
                </a>
            </li>
        {{/tabs}}
    </ul>

    <div class="tab-content border border-top-1 px-4 py-5 tabset-content">
        {{#tabs}}
            <div class="tab-pane fade {{#active}}show active{{/active}}"
                 id="tab-content-{{uniq}}-{{index}}"
                 role="tabpanel"
                 aria-labelledby="tab-{{uniq}}-{{index}}">
                {{{content}}}
            </div>
        {{/tabs}}
    </div>
</div>
